---
import "../styles/style.css";
import SecondaryButton from "./SecondaryButton.astro";

const {
  kategori, title, price, buttonarrow, img_product, link_side
} = Astro.props;


---

<section class="bg-secondary_beige w-[21rem] mt-10 mx-auto"> 
  <a href={link_side}>  <div><img class="w-full" src={img_product} alt="produkt_billeder"></div>
  <div class="p-7"><h3 class="text-heading-5">{kategori}</h3>
<h2 class="uppercase text-heading-3 font-semibold">{title}</h2>
<div class="flex justify-between items-center">
<h3 class="uppercase text-heading-4 font-light">{price}</h3>
<SecondaryButton/>
</div>
</div>
</a>
</section>

