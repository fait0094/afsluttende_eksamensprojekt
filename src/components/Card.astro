---
import "../styles/style.css";
import SecondaryButton from "./SecondaryButton.astro";

const {
  kategori, title, price, img_product, link_side
} = Astro.props;


---

<section class="bg-secondary_beige w-[20rem] h-full shadow-lg hover:shadow-2xl duration-100"> 
  <a href={link_side}>  <div><img class="w-full" src={img_product} alt="produkt_billeder"></div>
  <div class="p-7"><h3 class="text-heading-5">{kategori}</h3>
<h2 class="uppercase heading-3 font-semibold">{title}</h2>
<div class="flex justify-between items-center">
<h3 class="uppercase heading-6 font-light">{price}</h3>
<SecondaryButton/>
</div>
</div>
</a>
</section>

