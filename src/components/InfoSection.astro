---
import "../styles/style.css";
const {img1, title1, description1, img2, title2, description2, img3, title3, description3 } = Astro.props;
---

<section class="bg-secondary_beige grid lg:grid-cols-3 px-32 gap-40 text-center md:grid-cols-2">
<div class="flex flex-col justify-center items-center">
<img class="" src={img1} alt="">
<h3>{title1}</h3>
<p>{description1}</p>
</div>

<div class="flex flex-col justify-center items-center">
<img class="" src={img2} alt="">
<h3>{title2}</h3>
<p>{description2}</p>
</div>

<div class="flex flex-col justify-center items-center">
<img src={img3} alt="">
<h3>{title3}</h3>
<p>{description3}</p>
</div>

</section>

