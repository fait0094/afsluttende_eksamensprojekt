---
import "../styles/style.css";
const {img1, title1, description1, img2, title2, description2, img3, title3, description3 } = Astro.props;
---

<section class="bg-secondary_beige lg:flex px-32 py-16 gap-40 text-center md:grid md:grid-cols-2">
<div class="pt-16">
<img src={img1} alt="">
<h3>{title1}</h3>
<p>{description1}</p>
</div>
<div class="pt-16">
<img src={img2} alt="">
<h3>{title2}</h3>
<p>{description2}</p>
</div>
<div class="pt-16">
<img src={img3} alt="">
<h3>{title3}</h3>
<p>{description3}</p>
</div>
</section>