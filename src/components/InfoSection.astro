---
import "../styles/style.css";
import Heading from "./Heading.astro";
const {img1, title1, description1, img2, title2, description2, img3, title3, description3 } = Astro.props;
---
<section class="pb-8 pt-8">
    <div class=" grid lg:grid-cols-3 gap-16 text-center md:grid-cols-2 ">
    <div class="flex flex-col items-center">
    <img class="" src={img1} alt="" width="160" height="160">
    <h3 class="whitespace-nowrap">{title1}</h3>
    <p>{description1}</p>
    </div>
    
    <div class="flex flex-col items-center">
    <img class="" src={img2} alt="" width="160" height="160">
    <h3 class="whitespace-nowrap">{title2}</h3>
    <p>{description2}</p>
    </div>
    
    <div class="flex flex-col items-center">
    <img src={img3} alt="" height="160" width="160">
    <h3 class="whitespace-nowrap">{title3}</h3>
    <p>{description3}</p>
    </div>
    
    </div>
</section>

