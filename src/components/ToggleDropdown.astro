---
import "../styles/style.css";
const {
   type, title, option1, option2, option3, option4,
} = Astro.props;
---

<div class="min-h-screen flex items-center justify-center">

      <div class="relative group">
            <h4>{type}</h4>
        <button id="dropdown-button" class="inline-flex justify-center w-full px-4 py-2 text-sm font-medium text-dark_brown bg-white border border-light_brown shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 ">
          <span class="mr-2">{title}</span>
          <img src="/ikoner/arrow.svg" class="w-3 h-5 ml-2 -mr-1" />
        </button>

        <div id="dropdown-menu" class="hidden absolute right-0 mt-2  shadow-lg bg-white ring-1 ring-black ring-opacity-5 p-1 space-y-1 text-dark_brown">

       
            <!-- Dropdown content goes here -->
          <a href="#" class="block px-4 py-2 hover:bg-gray-100 active:bg-blue-100 cursor-pointer ">{option1}</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-100 active:bg-blue-100 cursor-pointer ">{option2}</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-100 active:bg-blue-100 cursor-pointer ">{option3}</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-100 active:bg-blue-100 cursor-pointer ">{option4}</a>
        </div>
      </div>
    </div>
    <script>
    // JavaScript to toggle the dropdown
        const dropdownButton = document.getElementById('dropdown-button');
        const dropdownMenu = document.getElementById('dropdown-menu');
        const searchInput = document.getElementById('search-input');
        let isOpen = true; // Set to true to open the dropdown by default
        
        // Function to toggle the dropdown state
        function toggleDropdown() {
          isOpen = !isOpen;
          dropdownMenu.classList.toggle('hidden', !isOpen);
        }
        
        // Set initial state
        toggleDropdown();
        
        dropdownButton.addEventListener('click', () => {
          toggleDropdown();
        });
        
    </script>