---
import "../styles/style.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Card from "../components/Card.astro";
import Kategoricard from "../components/Kategoricard.astro";

const { title, metacontent } = Astro.props;
---

<html lang="da">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={metacontent} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@400;500;600;700;800&family=Poppins&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body>
    <!-- Lav en seperat menu p책 forsiden?? Da den ikke er stylet p책 samme m책de p책 andre sider -->
    <!-- <Header /> -->
    <main>
      <slot />
    </main>
    <Header />
    <Card />
    <Kategoricard />
    <Footer />
  </body>
</html>
