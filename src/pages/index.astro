---
import SecondLayout from "../layouts/SecondLayout.astro";
import Card from "../components/Card.astro";
import Kategoricard from "../components/Kategoricard.astro";
import SecondaryButton from "../components/SecondaryButton.astro";
import PrimaryButton from "../components/PrimaryButton.astro";
import ToggleDropdown from "../components/ToggleDropdown.astro";
import Timer from "../components/Timer.astro";
import "../styles/style.css";
import InfoSection from "../components/InfoSection.astro";

---

<SecondLayout
  title="Det Lille Kafferisteri"
  metacontent="(Indsæt metabeskrivelse her)"
/>
      <Card 
      link_side="/produktside"
      img_product="/produktbilleder/kaffeprodukt_1.png"
      kategori="Espresso"
      title="koffeinfri aftenkasse | fra colombia"
      price="fra 79DKK"
      />
      

  <PrimaryButton 
  text="læs mere"
  >

  <ToggleDropdown
  type="type"
  title="Vælg kaffebønner"
  option1="Stempel"
  option2="Filter"
  option3="Espresso"
  option4="Mellemristet og lysristet"
  ></ToggleDropdown>
  <Timer/>
  
      <Kategoricard
    imgPath="/kategoricards/kaffeprodukter.webp"
    title="Kaffeprodukter"
    description="Udforsk vores sortiment af bæredygtige kaffebønner fra vores lokale risteri..."
    link_side=""
    
    />

   <InfoSection
   img1="/produktbilleder/kaffeprodukt_1.png"
   title1="Vælg din favorit kaffekasse..."
   description1="Der opfylder dine specifikke behov, hvad enten det er smag, pris eller andre præferencer."
   img2="/produktbilleder/kaffeprodukt_1.png"
   title2="Vælg din favorit kaffekasse..."
   description2="Der opfylder dine specifikke behov, hvad enten det er smag, pris eller andre præferencer."
   img3="/produktbilleder/kaffeprodukt_1.png"
   title3="Vælg din favorit kaffekasse..."
   description3="Der opfylder dine specifikke behov, hvad enten det er smag, pris eller andre præferencer."
   >
   </InfoSection>


</SecondLayout>


