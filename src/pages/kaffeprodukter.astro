---
import Sti from "../components/Sti.astro";
import MainLayout from "../layouts/MainLayout.astro";
import Heading from "../components/Heading.astro";
import "..//styles/style.css";
import Timer from "../components/Timer.astro";
import Card from "../components/Card.astro";

---

<MainLayout
  title="Det Lille Kafferisteri"
  metacontent="(Indsæt metabeskrivelse her)"
>
<section>
    <Sti
    sti1="Forside"
    divider1="/"
    sti2="Shop"
    divider2="/"
    sti3="Friskristet Kaffeprodukter"
    />
    <Heading><h1>Friskristet kaffeprodukter</h1><Heading/>
<p class="text-center">Gå på opdagelse i vores varianter af friskristet kaffe. Alle vores bønner er økologisk certificeret, ligesom vi så vidt muligt lever op til andre mærkninger, der støtter de lokale område, hvor bønnerne spirer. Velkommen til en smagsoplevelse, der går ud over det sædvanlige</p>
<Timer/>
</section>
 

<!-- Filtrering -->
<section
    class="bg-primary_white py-16"
    id="step"
    x-data="{ kaffetype: 'allekaffetyper', ristegrad: 'alleristegrader', smag: 'allesmag', oprindelse: 'alleoprindelser', andet: 'alleandet', skjultekaffe : 0 }"
  >
    <div class="md:max-w-3xl lg:max-w-6xl mx-auto">
      <Heading><h2>Vores kaffeprodukter</h2><Heading/>
      <!-- Filterknapper -->
      <section class="px-8 md:px-12">
        <div class="mb-10 mx-10">
          <form id="filtre" class="flex gap-8 justify-center">
  
            <!-- Kaffetype -->
            <div class="grid gap-2">
              <label for="kaffetype">Kaffetype</label>
              <select
                class="border rounded-lg border-primary_black block px-3 py-1 bg-primary_white"
                name="kaffetype"
                id="kaffetype"
                x-model="kaffetype"
                form="filtre"
                x-on:change="$nextTick(() => { ingenkaffe() });"
              >
                <option value="allekaffetyper">Alle</option>
                <option value="espresso">Espresso</option>
                <option value="stempelkande">Stempelkande</option>
                <option value="filterkande">Filterkande</option>
              </select>
            </div>
  
            <!-- Ristegrad -->
            <div class="grid gap-2">
              <label for="ristegrad">Ristegrad</label>
              <select
                class="border rounded-lg border-primary_black block px-3 py-1 bg-primary_white"
                name="ristegrad"
                id="ristegrad"
                x-model="ristegrad"
                form="filtre"
                x-on:change="$nextTick(() => { ingenkaffe() });"
              >
                <option value="alleristegrader">Alle</option>
                <option value="lysristet">Lysristet</option>
                <option value="mellemristet">Mellemristet</option>
              </select>
            </div>
  
            <!-- Smag -->
            <div class="grid gap-2">
              <label for="smag">Smag</label>
              <select
                class="border rounded-lg border-primary_black block px-3 py-1 bg-primary_white"
                name="smag"
                id="smag"
                x-model="smag"
                form="filtre"
                x-on:change="$nextTick(() => { ingenkaffe() });"
              >
                <option value="allesmag">Alle</option>
                <option value="sod">Sød</option>
                <option value="syrlig">Syrlig</option>
              </select>
            </div>
  
            <!-- Oprindelse -->
            <div class="grid gap-2">
              <label for="oprindelse">Oprindelse</label>
              <select
                class="border rounded-lg border-primary_black block px-3 py-1 bg-primary_white"
                name="oprindelse"
                id="oprindelse"
                x-model="oprindelse"
                form="filtre"
                x-on:change="$nextTick(() => { ingenkaffe() });"
              >
  
               <option value="alleoprindelser">Alle</option>
                <option value="sydamerika">Sydamerika</option>
                <option value="mellemamerika">Mellemamerika</option>
                <option value="nordafrika">Nordafrika</option>
                <option value="sydostasien">Sydøstasien</option>
  
              </select>
            </div>
  
            <!-- Andet -->
            <div class="grid gap-2">
              <label for="andet">Andet</label>
              <select
                class="border rounded-lg border-primary_black block px-3 py-1 bg-primary_white"
                name="andet"
                id="andet"
                x-model="andet"
                form="filtre"
                x-on:change="$nextTick(() => { ingenkaffe() });"
              >
                <option value="alleandet">Alle</option>
                <option value="koffeinfri">Koffeinfri</option>
              </select>
            </div>
          </form>
        </div>
      </section>
  
