---
import Kategoricard from "../components/Kategoricard.astro";
import MainLayout from "../layouts/MainLayout.astro";
import Sti from "../components/Sti.astro";
import Card from "../components/Card.astro";
import "..//styles/style.css";
---


<MainLayout
  title="Det Lille Kafferisteri"
  metacontent="(Indsæt metabeskrivelse her)"
>
<div class="container mx-auto p-4">
  <div class="swiper-container">
    <div class="swiper-wrapper">
      <div class="swiper-slide">     
        <Card
          kategori="Espresso"
          title="KAFFEMIK | MEXICO & GUATAMALA"
          price="FRA 79 DKK"
          img_product="/billeder/webp/Singleproduct2.webp"
          link_side="/kaffesingle"
        />
      </div>
      <div class="swiper-slide">     
        <Card
          kategori="Espresso"
          title="KAFFEMIK | MEXICO & GUATAMALA"
          price="FRA 79 DKK"
          img_product="/billeder/webp/Singleproduct2.webp"
          link_side="/kaffesingle"
        />
      </div>
      <div class="swiper-slide">     
        <Card
          kategori="Espresso"
          title="KAFFEMIK | MEXICO & GUATAMALA"
          price="FRA 79 DKK"
          img_product="/billeder/webp/Singleproduct2.webp"
          link_side="/kaffesingle"
        />
      </div>
      <!-- Add more cards as needed -->
    </div>
    <!-- Tilføj pagination -->
    <div class="swiper-pagination"></div>
  </div>
</div>

</MainLayout>


<script src="../js/main.js"></script>
   <script>
  // Tjek skærmstørrelse
  var isMobile = window.matchMedia("(max-width: 767px)").matches;

  // Initialiser Swiper kun på mobil
  if (isMobile) {
    var Swiper = new Swiper('.swiper-container', {
      slidesPerView: 1,
      spaceBetween: 10,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
    });
  }
</script>